<!--custom-tab-bar/index.wxml-->
<view class="tab-bar">
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item {{selected === index ? 'selected' : ''}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <view class="tab-bar-item-text" style="color: {{selected === index ? '#007AFF' : '#8E8E93'}}">{{item.text}}</view>
  </view>
</view> 