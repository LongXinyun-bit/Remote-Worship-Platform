.tools-container {
  padding: 30rpx;
  background-color: #FFFDE7;
}

.top-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #558B2F;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #8BC34A;
  display: block;
}

.calendar-section, .knowledge-section, .other-tools {
  margin-bottom: 40rpx;
  width: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #558B2F;
}

.subtitle {
  font-size: 24rpx;
  color: #9E9E9E;
}

.date {
  font-size: 28rpx;
  color: #9BC88B;
}

.calendar-card {
  background-color: #F1F8E9;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.lunar-date {
  font-size: 32rpx;
  color: #558B2F;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}

.festival {
  color: #D32F2F;
  font-weight: bold;
}

.calendar-content {
  border-top: 1rpx solid #DCEDC8;
  padding-top: 20rpx;
}

.good-bad-section {
  display: flex;
  margin-bottom: 20rpx;
}

.good-section, .bad-section {
  flex: 1;
}

.good-section .title {
  color: #558B2F;
}

.bad-section .title {
  color: #D32F2F;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.items {
  display: flex;
  flex-wrap: wrap;
}

.good-section .item {
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  background-color: #F1F8E9;
  border: 1rpx solid #C5E1A5;
  color: #558B2F;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.bad-section .item {
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  background-color: #FFEBEE;
  border: 1rpx solid #FFCDD2;
  color: #D32F2F;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.daily-tip {
  font-size: 26rpx;
  color: #558B2F;
  font-style: italic;
  text-align: center;
  padding: 15rpx 0;
  border-top: 1rpx dashed #DCEDC8;
  margin-top: 15rpx;
}

.knowledge-cards {
  max-height: 680rpx;
}

.knowledge-card {
  display: flex;
  align-items: center;
  background-color: #F1F8E9;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.knowledge-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.15);
}

.knowledge-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.knowledge-info {
  flex: 1;
}

.knowledge-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #558B2F;
  margin-bottom: 10rpx;
  display: block;
}

.knowledge-desc {
  font-size: 24rpx;
  color: #689F38;
  display: block;
  margin-bottom: 10rpx;
}

.knowledge-date {
  font-size: 22rpx;
  color: #9E9E9E;
  display: block;
}

.arrow {
  font-size: 36rpx;
  color: #9BC88B;
}

.tools-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.tool-item {
  width: 22%;
  text-align: center;
  margin-bottom: 30rpx;
}

.tool-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.tool-name {
  font-size: 24rpx;
  color: #666;
  display: block;
} 