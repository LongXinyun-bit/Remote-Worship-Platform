.profile-container {
  padding: 0;
  background-color: #F2F2F7; /* iOS 风格背景色 */
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', Helvetica, sans-serif;
}

.user-info-section {
  position: relative;
  height: 400rpx;
  width: 100%;
  margin-bottom: 120rpx;
}

.user-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.user-avatar-container {
  position: absolute;
  bottom: -80rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 180rpx; /* 更大的头像 */
  height: 180rpx;
  border-radius: 90rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
  position: absolute;
  bottom: -120rpx;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 2;
}

.user-name {
  font-size: 42rpx; /* 更大的字体 */
  font-weight: 600;
  color: #000000;
  margin-bottom: 20rpx;
  display: block;
}

.user-stats {
  display: flex;
  justify-content: center;
}

.stat-item {
  margin: 0 40rpx;
  text-align: center;
}

.stat-value {
  font-size: 42rpx; /* 更大的字体 */
  font-weight: 600;
  color: #007AFF; /* iOS 蓝色 */
  display: block;
}

.stat-label {
  font-size: 30rpx; /* 更大的字体 */
  color: #8E8E93; /* iOS 灰色 */
  display: block;
}

.menu-section {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.menu-group {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1); /* iOS 细线 */
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx; /* 更大的图标 */
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 36rpx; /* 更大的字体 */
  color: #000000;
  font-weight: 400;
}

.menu-arrow {
  font-size: 36rpx; /* 更大的箭头 */
  color: #C7C7CC; /* iOS 灰色 */
}

.logout-section {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.logout-btn {
  width: 100%;
  height: 100rpx; /* 更高的按钮 */
  line-height: 100rpx;
  background-color: #FFFFFF;
  color: #FF3B30; /* iOS 红色 */
  font-size: 36rpx; /* 更大的字体 */
  font-weight: 500;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
} 